<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3 mt-3 mb-3">Login </h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-lable">Username</lable>
                <input name="username" id="username" type="text" class="form-control" required>
                <div class="invalid-feedback">Username Required</div>
                <div class="valid-feedback">Looks Good!</div>    
            </div>
            <div class="mb-3">
                <lable for="password" class="form-lable">Password</lable>
                <input name="password" id="password" type="password" class="form-control" required>
                <div class="invalid-feedback">Password Required</div>
                <div class="valid-feedback">Looks Good!</div>    
            </div>
            <button class="btn btn-dark edit-btn">Login</button>
        </form>
    </div>
</div>